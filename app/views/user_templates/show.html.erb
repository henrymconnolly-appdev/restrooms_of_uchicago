<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      User #<%= @user.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/users" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/users/<%= @user.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit user
        </a>
      </div>

    </div>

    <dl>
      <dt>
        Email
      </dt>
      <dd>
        <%= @user.email %>
      </dd>

      <dt>
        Password
      </dt>
      <dd>
        <%= @user.password %>
      </dd>

      <dt>
        Username
      </dt>
      <dd>
        <%= @user.username %>
      </dd>

      <dt>
        Preference 1
      </dt>
      <dd>
        <%= @user.preference_1 %>
      </dd>

      <dt>
        Preference 2
      </dt>
      <dd>
        <%= @user.preference_2 %>
      </dd>

      <dt>
        Preference 3
      </dt>
      <dd>
        <%= @user.preference_3 %>
      </dd>

      <dt>
        Preference 4
      </dt>
      <dd>
        <%= @user.preference_4 %>
      </dd>

      <dt>
        Preference 5
      </dt>
      <dd>
        <%= @user.preference_5 %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@user.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@user.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

